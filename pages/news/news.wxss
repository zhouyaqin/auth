.page{
	overflow: hidden;
}

.weui-cell::after,
.weui-cells::after{
	border-bottom:1rpx solid #f1f2f6
}

.weui-cell::before,
.weui-cells::before{
	border: none;
}

.weui-cell__hd .img{
	margin-right: 5px;
	vertical-align: middle;
	width: 40px;
	height: 40px;
}

.weui-cell__bd{
	padding-left: 5px;
	font-size: 14px;
	color: #363638;
}

.weui-cell__ft .text{
	position: absolute;
	right: 15px;
	font-size: 12px;
	top: 10px;
}

.weui-cell__bd_text{
	font-size: 12px;
	color: #b1b4bd;
	line-height: 24px;
	width: 260px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.news-message{
	margin-top: 5px;
	position: relative;
	width: 100%;
	min-height: 500px;
}


