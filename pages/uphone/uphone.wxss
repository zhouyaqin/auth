


.weui-cell::after,
.weui-cells::after{
	border-bottom:1rpx solid #f1f2f6
}

.weui-cell::before,
.weui-cells::before{
	border: none;
}

.weui-cell__hd .img{
	margin-right: 5px;
	vertical-align: middle;
	width: 24px;
	height: 24px;
}

.weui-cell__bd{
	padding-left: 5px;
	font-size: 14px;
	color: #363638;
}

.content-body{
	margin-top: 5px;
	border-bottom: 5px solid #f1f2f6;
}

.content-body_img{
    position: relative;
    margin-top: 3px;
    padding: 10px 20px;
    background: #ffffff;
}

.content-body_img .img{
    width: 100%;
    height: 220px;
    border-radius: 10px;
}

.title-body{
    position: relative;
}

.title-body .icon-img{
    width: 20px;
    height: 20px;
    float: left;
}

.title-body .title{
    float: left;
    font-size: 14px;
    color: #999;
    padding: 0 10px;
}

.img-body{
    position: relative;
    margin-top: 10px;
    width: 100%;
}


.input-text{
	padding: 0 15px 0 5px;
	color: #b0b3ba;
}

.btn_1{
	width: 120px;
	font-size: 12px;
	background: #ffffff;
	color: #76b042;
}

.active{
	border: 1px solid #76b042;
}

.submit-btn{
	margin: 20px 40px;
	background: #b1b4bd;
	color: #ffffff;
}

.submit-btn__active{
	background: #76b042;
}


.update-phone{
	padding: 8px 15px;
	text-align: right;
	font-size: 14px;
	color: #959da0;
}

