
.content-body{
    position: relative;
    padding: 10px 15px;
    background: #ffffff;
    margin: 5px;
}

.content-body .img{
    width: 100%;
    height: 180px;
    border-radius: 10px;
}

.title-body{
    position: relative;
    margin-bottom: 10px;
}

.title-body .icon-img{
    width: 20px;
    height: 20px;
    float: left;
}

.title-body .title{
    float: left;
    font-size: 14px;
    color: #999;
    padding: 0 10px;
}

.img-body{
    position: relative;
    width: 100%;
}

.button-body{
   margin: 30px;
}

.button-body .button{
    font-size: 14px;
    color: #FFF;
    line-height: 42px;
    background: #dadde3;
}

.button-body .active{
    font-size: 14px;
    color: #FFF;
    line-height: 42px;
    background: #82b654;
}