.page{
	overflow: hidden;
}

.weui-cell::after,
.weui-cells::after{
	border-bottom:1rpx solid #f1f2f6
}

.weui-cell::before,
.weui-cells::before{
	border: none;
}

.weui-cell__hd .img{
	margin-right: 5px;
	vertical-align: middle;
	width: 40px;
	height: 40px;
}

.weui-cell__bd{
	padding-left: 5px;
	font-size: 14px;
	color: #363638;
}

.weui-cell__ft .text{
	position: absolute;
	right: 15px;
	font-size: 12px;
	top: 10px;
}

.weui-cell__bd_text{
	font-size: 12px;
	color: #b1b4bd;
	line-height: 24px;
	width: 260px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.news-message{
	margin-top: 5px;
	position: relative;
	width: 100%;
	min-height: 500px;
}


.mask-container{
    z-index: 100;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
}

.mask-body{
    position: absolute;
    top: 30%;
    left: 50%;
    margin-left: -140px;
    width: 280px;
    min-height: 100px;
    background: #ffffff;
    border-radius: 6px;
}

.mask-body .title{
    padding: 10px;
    font-size: 14px;
    text-align: center;
    color: #ee7001;
    background: #f3f3f5;
    border-radius: 6px;
}

.mask-body .content{
    padding: 12px 15px 0px 15px;
    font-size: 14px;
    color: #363638;
}

.mask-body .datetime{
    padding: 10px;
    text-align: right;
    font-size: 14px;
    color: #b1b4bb;
}


